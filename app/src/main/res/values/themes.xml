<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnlyVote" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <!--Classic element color-->
        <item name="colorPrimary">@color/gouv_blue</item>
        <!--Android bar color-->
        <item name="colorPrimaryVariant">@color/gouv_dark_blue</item>
        <!--Top and bottom bar color-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <!--Datepicker color-->
        <item name="colorSecondary">@color/gouv_blue</item>
        <!--Candidate background page color-->
        <item name="colorSecondaryVariant">@color/light_white</item>
        <item name="colorOnSecondary">@color/gouv_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/marianne_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlNormal">@color/white</item>
    </style>
</resources>